<PDA>
	<!-- The following tags contain the general information of the PDA. -->
	<STATES>012</STATES>
	<INPUT_ALPHABET>abc</INPUT_ALPHABET>
	<STACK_ALPHABET>XZ</STACK_ALPHABET>
	<START_STATE>0</START_STATE>
	<START_STACK_SYMBOL>X</START_STACK_SYMBOL>
	<ACCEPT_STATES>2</ACCEPT_STATES>
	
	<!-- The following tags contain the transitions between the states. -->
	<TRANSITION numberOfTransition="0"> 				<!-- The attribute numberOfTransition indicates the number of the transition PER BEGIN STATE. -->
		<BEGIN_STATE>0</BEGIN_STATE> 					<!-- The state where the transition starts.-->
		<INPUT>a</INPUT> 								<!-- Input to consume. -->
		<STACK_SYMBOL_TO_POP>X</STACK_SYMBOL_TO_POP> 	<!-- Symbol to pop from the stack. -->
		<STACK_SYMBOL_TO_PUSH>XX</STACK_SYMBOL_TO_PUSH> <!-- Symbol(s) to push on the string. --> 
		<END_STATE>0</END_STATE> 						<!-- The state where the transition ends. -->
	</TRANSITION>
	<TRANSITION numberOfTransition="1"> 				<!-- NumberOfTransition is 1 because it is the second transition starting from state 0. -->
		<BEGIN_STATE>0</BEGIN_STATE>
		<INPUT>b</INPUT>
		<STACK_SYMBOL_TO_POP>X</STACK_SYMBOL_TO_POP>
		<STACK_SYMBOL_TO_PUSH>XX</STACK_SYMBOL_TO_PUSH>
		<END_STATE>0</END_STATE>
	</TRANSITION>
	<TRANSITION numberOfTransition="2"> 				<!-- NumberOfTransition is 2 because it is the third transition starting from state 0. -->
		<BEGIN_STATE>0</BEGIN_STATE>
		<INPUT>c</INPUT>
		<STACK_SYMBOL_TO_POP>X</STACK_SYMBOL_TO_POP>
		<STACK_SYMBOL_TO_PUSH>Z</STACK_SYMBOL_TO_PUSH>
		<END_STATE>1</END_STATE>
	</TRANSITION>
	<TRANSITION numberOfTransition="0"> 				<!-- NumberOfTransition is 0 because it is the first transition starting from state 1. -->
		<BEGIN_STATE>1</BEGIN_STATE>
		<INPUT>a</INPUT>
		<STACK_SYMBOL_TO_POP>Z</STACK_SYMBOL_TO_POP>
		<STACK_SYMBOL_TO_PUSH>e</STACK_SYMBOL_TO_PUSH>  <!-- The symbol e is used to represent the empty string epsilon. -->	
		<END_STATE>2</END_STATE>
	</TRANSITION>
</PDA>
